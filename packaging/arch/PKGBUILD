# Maintainer: Ermal Guni <ermalguni@gmail.com>
pkgname=hiveden
pkgver=0.0.0
pkgrel=1
pkgdesc="A CLI tool and REST API for managing your personal server."
arch=('x86_64')
url="https://github.com/hiveden/hiveden"
license=('MIT')
depends=('python' 'python-pip')
makedepends=('python-build' 'python-installer' 'python-wheel')
source=("hiveden-$pkgver.tar.gz::https://github.com/hiveden/hiveden/archive/v$pkgver.tar.gz" "hiveden.service" "hiveden.default.yaml" "hiveden.sysusers")
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

package() {
  cd "$srcdir/hiveden-$pkgver"
  python -m build --wheel --no-isolation
  pip install --root="$pkgdir" --prefix=/usr dist/*.whl

  install -D -m644 "$srcdir/hiveden.service" "$pkgdir/usr/lib/systemd/system/hiveden.service"
  install -D -m644 "$srcdir/hiveden.default.yaml" "$pkgdir/etc/hiveden/config.yaml"
  install -D -m644 "$srcdir/hiveden.sysusers" "$pkgdir/usr/lib/sysusers.d/hiveden.conf"
}